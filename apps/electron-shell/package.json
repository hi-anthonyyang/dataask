{
  "name": "@dataask/electron-shell",
  "version": "1.0.0",
  "description": "DataAsk Electron desktop application",
  "main": "dist/main.js",
  "scripts": {
    "dev": "NODE_ENV=development tsc && cp src/preload.js dist/ && wait-on http://localhost:3001/api/health http://localhost:3000 && NODE_ENV=development electron dist/main.js",
    "dev:watch": "tsc --watch & electron dist/main.js",
    "build": "tsc && cp src/preload.js dist/",
    "start": "electron dist/main.js",
    "clean": "rm -rf dist/",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron": "^28.3.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.0"
  }
}
