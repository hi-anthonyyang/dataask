# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration  
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration (for Docker Compose)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dataask_dev
POSTGRES_USER=dataask_user
POSTGRES_PASSWORD=dataask_dev_password

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key!!

# Logging
LOG_LEVEL=info

# MySQL Configuration (for Docker Compose)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=dataask_dev
MYSQL_USER=dataask_user
MYSQL_PASSWORD=dataask_dev_password
MYSQL_ROOT_PASSWORD=dataask_root_password

# MySQL Performance Tuning (Optional)
MYSQL_QUEUE_LIMIT=0

# Security
DB_MAX_EXECUTION_TIME_MS=30000

# Development
ENABLE_SQL_LOGGING=true
ENABLE_QUERY_CACHE=false

# Rate Limiting Configuration
RATE_LIMIT_AI=20
RATE_LIMIT_DB=60
RATE_LIMIT_GENERAL=100 