# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration  
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration (for Docker Compose)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dataask_dev
POSTGRES_USER=dataask_user
POSTGRES_PASSWORD=dataask_dev_password

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here!!

# Logging
LOG_LEVEL=info

# MySQL Configuration (for Docker Compose)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=dataask_dev
MYSQL_USER=dataask_user
MYSQL_PASSWORD=dataask_dev_password
MYSQL_ROOT_PASSWORD=dataask_root_password

# MySQL Performance Tuning (Optional)
MYSQL_QUEUE_LIMIT=0

# Security
DB_MAX_EXECUTION_TIME_MS=30000

# Development
ENABLE_SQL_LOGGING=true
ENABLE_QUERY_CACHE=false

# Rate Limiting Configuration
RATE_LIMIT_AI=20
RATE_LIMIT_DB=60
RATE_LIMIT_GENERAL=100 

# Database SSL/TLS Configuration (Production)
# Enable SSL for database connections
DB_SSL_ENABLED=false
# Reject unauthorized certificates (set to false for self-signed certs)
DB_SSL_REJECT_UNAUTHORIZED=true
# SSL Certificate Authority (CA) certificate
DB_SSL_CA=
# SSL Client certificate (optional)
DB_SSL_CERT=
# SSL Client private key (optional)
DB_SSL_KEY=

# Frontend Encryption Key (32+ characters recommended)
# This will be injected into the frontend build for localStorage encryption
DATAASK_ENCRYPTION_KEY=your-32-character-encryption-key-here!! 